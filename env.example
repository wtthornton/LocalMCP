# Personal MCP Gateway Environment Configuration
# Copy this file to .env and adjust values as needed

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Cache Configuration
CACHE_DIR=./cache
CACHE_TTL=86400
CACHE_SWR=604800
CACHE_MAX_AGE=2592000
CACHE_MAX_MB=400
CACHE_MAX_ENTRIES_PER_PKG=250

# Database Configuration
DATABASE_URL=sqlite:./data/mcp-gateway.db
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_API_KEY=

# Context7 Configuration
CONTEXT7_API_KEY=
CONTEXT7_CACHE_ENABLED=true
CONTEXT7_CACHE_TTL=86400

# Playwright Configuration
PLAYWRIGHT_SERVER_URL=http://localhost:8931
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/mcp-gateway.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security Configuration
API_KEY=
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pipeline Configuration
PIPELINE_MAX_TOKENS=8000
PIPELINE_MAX_CHUNKS=10
PIPELINE_TIMEOUT_MS=120000
PIPELINE_MAX_RETRIES=2

# RAG Configuration
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
RAG_MAX_CHUNKS_PER_FILE=3
RAG_MAX_TOTAL_CHUNKS=10

# Lessons Learned Configuration
LESSONS_CONFIDENCE_DECAY=0.2
LESSONS_DECAY_PERIOD_DAYS=30
LESSONS_PROMOTION_THRESHOLD=5
LESSONS_PROMOTION_SUCCESS_RATE=0.7
