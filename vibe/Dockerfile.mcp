# Dockerfile for PromptMCP MCP Server
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./

# Install dependencies (this will compile native modules for Linux)
RUN npm ci --only=production --legacy-peer-deps

# Copy built application
COPY dist/ ./dist/

# Rebuild native modules for Linux container
RUN npm rebuild better-sqlite3

# Ensure we have the correct node_modules for Linux
RUN mkdir -p /workspace/node_modules && cp -r node_modules/* /workspace/node_modules/ 2>/dev/null || true

# Create data and logs directories
RUN mkdir -p /app/data /app/logs

# Create non-root user
RUN addgroup -g 1001 -S nodejs
RUN adduser -S promptmcp -u 1001

# Create workspace directory before changing ownership
RUN mkdir -p /workspace

# Change ownership
RUN chown -R promptmcp:nodejs /app /workspace
USER promptmcp

# Health check for MCP server
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "console.log('MCP server health check')" || exit 1

# Start the MCP server (not the HTTP server)
CMD ["node", "dist/mcp/server.js"]