{
  "name": "personal-mcp-gateway",
  "version": "0.1.0",
  "description": "Personal MCP Gateway for vibe coders - faster, more contextual AI coding assistance",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t personal-mcp-gateway .",
    "docker:run": "docker run -p 3000:3000 -v $(pwd):/workspace personal-mcp-gateway",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai-assistant",
    "vibe-coders",
    "context7",
    "rag",
    "docker"
  ],
  "author": "Personal MCP Gateway Team",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2",
    "faiss-node": "^0.4.0",
    "playwright": "^1.40.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "nanoid": "^5.0.4",
    "lru-cache": "^10.1.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/personal-mcp-gateway.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/personal-mcp-gateway/issues"
  },
  "homepage": "https://github.com/your-org/personal-mcp-gateway#readme"
}
