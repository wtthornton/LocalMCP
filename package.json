{
  "name": "localmcp",
  "version": "1.0.0",
  "description": "A local MCP server for vibe coders providing 4 simple tools: analyze, create, fix, learn",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "localmcp": "./dist/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:localmcp": "node scripts/test-localmcp.js",
    "test:context7": "node scripts/test-context7.js",
    "test:context7-mcp": "node scripts/test-context7-mcp.js",
    "test:advanced-cache": "node scripts/test-advanced-cache.js",
    "test:phase1": "node scripts/test-phase1.js",
    "test:playwright": "node scripts/test-playwright.js",
    "test:playwright-integration": "node scripts/test-playwright-integration.js",
    "test:admin-console": "node scripts/test-admin-console.js",
    "test:pipeline-engine": "node scripts/test-pipeline-engine.js",
    "test:complete-pipeline": "node scripts/test-complete-pipeline.js",
    "test:phase1-validation": "node scripts/test-phase1-validation.js",
    "test:lessons-learned": "node scripts/test-lessons-learned.js",
    "test:adaptive-learning": "node scripts/test-adaptive-learning.js",
    "test:lesson-analytics": "node scripts/test-lesson-analytics.js",
    "test:user-guide": "node scripts/test-user-guide-system.js",
    "generate:user-guide": "node scripts/simple-user-guide-generator.js",
    "test:project-id": "node scripts/test-project-identification.js",
    "test:project-id-simple": "node scripts/test-project-id-simple.js",
    "test:multi-project": "node scripts/test-multi-project-management.js",
    "test:lesson-promotion": "node scripts/test-lesson-promotion-system.js",
    "test:phase4-integration": "node scripts/test-phase4-integration.js",
    "test:policy-gate": "node scripts/test-policy-gate.js",
    "test:simple-security": "node scripts/test-security-direct.js",
    "test:offline-services": "node scripts/test-offline-services.cjs",
    "test:context7-real": "node scripts/test-context7-real.cjs",
    "test:resilience-services": "node scripts/test-resilience-services.cjs",
    "test:execution-services": "node scripts/test-execution-services.cjs",
    "test:enhanced-pipeline": "node scripts/test-enhanced-pipeline-services.cjs",
    "test:logging-services": "node scripts/test-logging-services.cjs",
    "test:offline-mode": "node scripts/test-offline-mode.cjs",
    "test:resilience-coordinator": "node scripts/test-resilience-coordinator.cjs",
    "test:resilience-simple": "node scripts/test-resilience-simple.cjs",
    "test:monitoring-services": "node scripts/test-monitoring-services.cjs",
    "test:monitoring-simple": "node scripts/test-monitoring-simple.cjs",
    "setup:context7": "node scripts/setup-context7.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo Build completed successfully"
  },
  "keywords": [
    "mcp",
    "ai",
    "assistant",
    "vibe-coders",
    "typescript",
    "nodejs"
  ],
  "author": "LocalMCP Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@qdrant/js-client-rest": "^1.15.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "rimraf": "^5.0.10",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wtthornton/LocalMCP.git"
  },
  "bugs": {
    "url": "https://github.com/wtthornton/LocalMCP/issues"
  },
  "homepage": "https://github.com/wtthornton/LocalMCP#readme"
}
