# PromptMCP Configuration
# Copy this file to .env and customize as needed

# Server Configuration
PROMPTMCP_NAME=promptmcp
PROMPTMCP_VERSION=1.0.0
PROMPTMCP_PORT=3000

# OpenAI Integration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_PROJECT_ID=your_openai_project_id_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT=60000
OPENAI_RETRIES=3

# Context7 Integration
CONTEXT7_ENABLED=true
CONTEXT7_API_KEY=your_context7_api_key_here
CONTEXT7_BASE_URL=https://api.context7.io
CONTEXT7_CACHE_ENABLED=true
CONTEXT7_CACHE_TTL=3600

# Context7 MCP Server Integration (alternative to direct API)
CONTEXT7_MCP_ENABLED=false
CONTEXT7_MCP_URL=http://localhost:3001
CONTEXT7_MCP_TIMEOUT=30000

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/localmcp.db
# For Qdrant (optional)
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=your_qdrant_api_key

# Vector Database Configuration (for RAG and semantic search)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION_DOCUMENTS=localmcp_documents
QDRANT_COLLECTION_LESSONS=localmcp_lessons
QDRANT_COLLECTION_PATTERNS=localmcp_patterns

# Playwright MCP Configuration (for UI testing and screenshots)
PLAYWRIGHT_ENABLED=false
PLAYWRIGHT_MCP_URL=http://localhost:8931
PLAYWRIGHT_TIMEOUT=30000

# Advanced Caching Configuration (SQLite + LRU)
CACHE_MAX_MEMORY_ENTRIES=1000
CACHE_MAX_MEMORY_SIZE=52428800
CACHE_DEFAULT_TTL=3600
CACHE_MAX_TTL=86400
CACHE_CLEANUP_INTERVAL=300
CACHE_ENABLE_PERSISTENCE=true
CACHE_DB_PATH=./data/cache/context7.db

# Admin Console Configuration
ADMIN_ENABLED=true
ADMIN_PORT=3001
ADMIN_USERNAME=admin
ADMIN_PASSWORD=localmcp123

# Logging Configuration
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=false
LOG_FILE_PATH=./logs/localmcp.log

# Tool Configuration
# Analyze Tool
TOOL_ANALYZE_ENABLED=true
TOOL_ANALYZE_MAX_DEPTH=10
TOOL_ANALYZE_INCLUDE_NODE_MODULES=false

# Create Tool
TOOL_CREATE_ENABLED=true
TOOL_CREATE_DEFAULT_FRAMEWORK=react
TOOL_CREATE_INCLUDE_TESTS=true

# Fix Tool
TOOL_FIX_ENABLED=true
TOOL_FIX_AUTO_APPLY=false
TOOL_FIX_BACKUP_ORIGINAL=true

# Learn Tool
TOOL_LEARN_ENABLED=true
TOOL_LEARN_STORAGE_PATH=./data/lessons
TOOL_LEARN_MAX_LESSONS=1000