{
  "mcpServers": {
    "promptmcp-docker": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "promptmcp:latest"
      ],
      "env": {
        "NODE_ENV": "production",
        "CONTEXT7_ENABLED": "false",
        "LOG_LEVEL": "info"
      },
      "stdio": true,
      "description": "PromptMCP Docker - Containerized simple prompt enhancement"
    }
  },
  "mcp.enabled": true,
  "mcp.defaultServer": "promptmcp-docker"
}