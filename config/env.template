# PromptMCP Environment Configuration

# Context7 API Key (optional but recommended for enhanced documentation)
CONTEXT7_API_KEY=your_context7_api_key_here

# Context7 Configuration
CONTEXT7_USE_HTTP_ONLY=true
CONTEXT7_CACHE_TTL=3600
CONTEXT7_CACHE_SIZE=1000

# Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=localmcp

# Server Configuration
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_SIZE=1000

# Tool Configuration
TOOL_TIMEOUT=30000
TOOL_MAX_RETRIES=3

# Security
MAX_CONTEXT_SIZE=51200
MAX_EXECUTION_TIME=30000
MAX_CONCURRENT_REQUESTS=10
