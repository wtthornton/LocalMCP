{
  "mcpServers": {
    "promptmcp-docker": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--name", "promptmcp-mcp-temp",
        "-v", "C:\\cursor\\vibe:/workspace",
        "-v", "C:\\cursor\\vibe\\data:/app/data",
        "-v", "C:\\cursor\\vibe\\logs:/app/logs",
        "-w", "/workspace",
        "promptmcp:latest",
        "node", "dist/mcp/server.js"
      ],
      "env": {
        "NODE_ENV": "production",
        "CONTEXT7_ENABLED": "true",
        "LOG_LEVEL": "info",
        "WORKSPACE_PATH": "/workspace"
      },
      "stdio": true,
      "description": "PromptMCP Docker - Containerized MCP server with workspace access"
    }
  },
  "mcp.enabled": true,
  "mcp.defaultServer": "promptmcp-docker"
}
