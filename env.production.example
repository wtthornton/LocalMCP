# Production Environment Variables for AI Summarization

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_PROJECT_ID=your_project_id_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT=30000
OPENAI_RETRY_ATTEMPTS=3

# Summarization Configuration
ENABLE_SUMMARIZATION=true
SUMMARIZATION_MIN_TOKENS=500
SUMMARIZATION_MAX_TOKENS=300

# Cache Configuration
ENABLE_CACHE=true
CACHE_DB_PATH=./prompt-cache.db
CACHE_MAX_ENTRIES=1000
CACHE_TTL=3600000

# Monitoring Configuration
ENABLE_MONITORING=true
LOG_LEVEL=info
METRICS_INTERVAL=60000

# Context7 Configuration (if using)
CONTEXT7_API_KEY=your_context7_api_key_here
CONTEXT7_BASE_URL=https://api.context7.io
