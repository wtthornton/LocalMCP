# Framework Detection Configuration
# Dynamic framework detection using pattern matching, AI, and project context

# Enable/disable framework detection
FRAMEWORK_DETECTION_ENABLED=true

# Confidence threshold for framework detection (0.0 - 1.0)
FRAMEWORK_DETECTION_CONFIDENCE_THRESHOLD=0.3

# Enable/disable caching for framework detection
FRAMEWORK_DETECTION_CACHE_ENABLED=true

# Cache TTL in seconds (24 hours = 86400)
FRAMEWORK_DETECTION_CACHE_TTL=86400

# Enable/disable AI-powered library suggestions
FRAMEWORK_DETECTION_AI_ENABLED=true

# Enable/disable pattern-based detection
FRAMEWORK_DETECTION_PATTERN_ENABLED=true

# Enable/disable project context analysis
FRAMEWORK_DETECTION_PROJECT_ENABLED=true

# Maximum number of libraries to detect per request
FRAMEWORK_DETECTION_MAX_LIBRARIES=5

# AI service timeout in milliseconds
FRAMEWORK_DETECTION_AI_TIMEOUT=5000

# Example configurations for different environments:

# Development (more permissive, faster detection)
# FRAMEWORK_DETECTION_CONFIDENCE_THRESHOLD=0.2
# FRAMEWORK_DETECTION_MAX_LIBRARIES=10
# FRAMEWORK_DETECTION_AI_TIMEOUT=3000

# Production (more conservative, higher quality)
# FRAMEWORK_DETECTION_CONFIDENCE_THRESHOLD=0.5
