# PromptMCP Environment Configuration
# Copy this file to .env for local development
# DO NOT COMMIT THE .env FILE TO GITHUB

# Context7 API Configuration
CONTEXT7_API_KEY=your_context7_api_key_here
CONTEXT7_ENABLED=true
CONTEXT7_USE_HTTP_ONLY=true
CONTEXT7_BASE_URL=https://mcp.context7.com/mcp
CONTEXT7_API_VERSION=v1
CONTEXT7_TIMEOUT=30000

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_PROJECT_ID=your_openai_project_id_here

# TestSprite API Configuration
TESTSPRITE_API_KEY=your_testsprite_api_key_here

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
WORKSPACE_PATH=/app
HTTP_PORT=3001
HEALTH_PORT=3000

# Qdrant Configuration
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=promptmcp_vectors

# Test Configuration
TESTSPRITE_PROJECT_ROOT=C:\cursor\TappMCP
TESTSPRITE_CONFIG_PATH=./testsprite.config.js
TESTSPRITE_OUTPUT_DIR=./test-results
TESTSPRITE_LOG_LEVEL=info
